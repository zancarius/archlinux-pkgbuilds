# Maintainer: Benjamin A. Shelton <zancarius at gmail _ com>
# Source: https://github.com/zancarius/archlinux-pkgbuilds

pkgname=postgresql-hll
pkgver=20170627
pkgrel=1
pkgdesc="HyperLogLog for PostgreSQL."
arch=(x86_64)
url="https://github.com/aggregateknowledge/postgresql-hll"
license=(Apache)
source=()
md5sums=()
makedepends=(postgresql postgresql-libs)

_gitroot="https://github.com/aggregateknowledge/postgresql-hll"
_gitname="postgresql-hll"

build () {

    cd "${srcdir}"
    
    if [ -d "${_gitname}/.git" ] ; then
        msg "Updating git repository..."
        (cd "${_gitname}" && git pull)
    else
        msg "Cloning git repository..."
        git clone --depth=1 ${_gitroot} ${_gitname}
    fi
    
    cp -af "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
    cd "${srcdir}/${_gitname}-build"
    
    PG_CONFIG=/usr/bin/pg_config make

}

package () {

    cd "${srcdir}/${_gitname}-build"
    make DESTDIR="${pkgdir}" install
    
    #install -D -m0655 "${srcdir}/${_gitname}/LICENSE" "${pkgdir}/usr/share/licenses/php-hiredis/LICENSE"
    #install -D -m0655 "${srcdir}/php-hiredis.ini" "${pkgdir}/etc/php/conf.d/php-hiredis.ini"

}
